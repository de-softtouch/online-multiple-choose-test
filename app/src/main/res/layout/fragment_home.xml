<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.HomeFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Enter room code"
                android:textColorHint="@color/purple_500"
                app:boxBackgroundColor="@null"
                app:endIconMode="custom">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_hRoomCode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:imeOptions="flagNoExtractUi"
                    android:textAllCaps="true" />
            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/btn_hFindRoom"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/primary"
                android:backgroundTint="@color/primary"
                android:text="Find"
                android:textColor="@color/white" />

        </LinearLayout>

        <Button
            android:id="@+id/btn_hCreateRoom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:backgroundTint="@color/button_card_filter"
            android:padding="20dp"
            android:text="Create New Room"
            android:textAlignment="viewStart"
            app:icon="@drawable/ic_baseline_add_24"
            app:iconGravity="end"
            app:iconSize="40dp" />

        <Button
            android:id="@+id/btn_viewCreatedRoom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:backgroundTint="@color/button_card_filter"
            android:padding="20dp"
            android:text="My Created Room"
            android:textAlignment="viewStart"
            app:icon="@drawable/ic_baseline_meeting_room_24"
            app:iconGravity="end"
            app:iconSize="40dp" />

    </LinearLayout>

</FrameLayout>